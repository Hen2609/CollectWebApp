<div class="homepage">
    <form class="filters">
        <input type="text" id="free-search" placeholder="חיפוש חופשי" aria-label="חיפוש חופשי" name="search"/>
        <button type="submit" id="filter-button" aria-label="סנן">
            <span>
                <%- include("../../components/icon/index.ejs", {icon: 'filter_alt'}) %>
            </span>
        </button>
        <% categories.forEach(cat => { %>
            <label for="<%-cat._id%>"><%= cat.name %></label>
            <input type="checkbox" id="<%- cat._id %>" name="categories" value="<%-cat._id %>"/>
        <% }) %>
    </form>
    <%- include("../../components/products-area/index.ejs", {products, utils}) %>
</div>
<script type="module">
    <%- include("./script.js") %>
</script>
<style>
    <%- include('./style.css') %>
</style>